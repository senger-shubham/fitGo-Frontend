<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="App Icon"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitGo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FitGo is your fitness companion that helps you track workouts, calories, and progress all in one place. Stay healthy, stay strong!"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by: Your Shubh: your.swapan.9057316@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Copyright -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 FitGo. All rights reserved."
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
