<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ProgressStatsActivity">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Progress"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- RecyclerView for Daily Logs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCalorieHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0" />

    <!-- Bar Chart for Daily Progress -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartCalories"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />

    <!-- Pie Chart for Meal Breakdown -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartMealBreakdown"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />
    

</LinearLayout>
